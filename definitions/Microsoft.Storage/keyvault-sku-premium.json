{
    "properties": {
      "displayName": "key Vault SKU",
      "policyType": "Custom",
      "description": "Prevents creation of key vaults without premium SKU",
      "parameters": {
        "keyVaultSKUs": {
          "type": "Array",
          "metadata": {
            "description": "Allowed SKU",
            "displayName": "Allowed SKU"
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.KeyVault/vaults"
            },
            {
              "not": {
                "field": "Microsoft.KeyVault/vaults/sku.name",
                "in": "[parameters('keyVaultSKUs')]"
              }
            }
          ]
        },
        "then": {
          "effect": "Deny"
        }
      }
    }
  }